<p id="notice"><%= notice %></p>

<h1>誰かの日記</h1>

<table class="table">
  <thead>
  <tr>
    <th>タイトル</th>
    <th>投稿された日</th>
    <th colspan="2"></th>
  </tr>
  </thead>

  <tbody>
  <% @diaries.each do |diary| %>
    <tr>
      <td><%= diary.title %></td>
      <td><a href="/created_days/<%= diary.created_day_id %>"><%= diary.created_day.day %></a></td>
      <td>
        <button type="button" class="btn btn-dark"><%= link_to '本文を読む', diary, {class: "text-white"} %></button>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<br>


<button type="button" class="btn btn-dark"><%= link_to '日記を投稿する', new_diary_path, {class: "text-white"} %></button>
